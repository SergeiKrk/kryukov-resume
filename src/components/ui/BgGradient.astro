<style is:global>
	@media (min-width: 768px) {
		@keyframes moveGradient {
			0% {
				transform: translateX(0) translateY(0);
				background: radial-gradient(circle at 50% 0%, #e60ba9, #855a9e, #18f0bc);
				opacity: 0.2;
			}
			25% {
				transform: translateX(40vw) translateY(30vh);
				background: radial-gradient(circle at 50% 0%, #e60ba9, #855a9e, #18f0bc);
				opacity: 0.2;
			}
			50% {
				transform: translateX(10vw) translateY(20vh);
				background: radial-gradient(circle at 50% 0%, #e60ba9, #855a9e, #18f0bc);
				opacity: 0.2;
			}
			75% {
				transform: translateX(40vw) translateY(10vh);
				background: radial-gradient(circle at 50% 0%, #e60ba9, #855a9e, #18f0bc);
				opacity: 0.2;
			}
			100% {
				transform: translateX(20vw) translateY(60vh);
				background: radial-gradient(circle at 50% 0%, #e60ba9, #855a9e, #18f0bc);
				opacity: 0.2;
			}
		}
		@keyframes moveGradientt {
			0% {
				transform: translateX(40vw) translateY(30vh);
				background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
				opacity: 0.2;
			}
			25% {
				transform: translateX(10vw) translateY(20vh);
				background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
				opacity: 0.2;
			}
			50% {
				transform: translateX(40vw) translateY(10vh);
				background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
				opacity: 0.2;
			}
			75% {
				transform: translateX(20vw) translateY(50vh);
				background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
				opacity: 0.2;
			}
			100% {
				transform: translateX(0) translateY(0);
				background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
				opacity: 0.2;
			}
		}
	}

	div.animate-gradient {
		background-size: 100% 100%;
		animation-timing-function: ease-in-out;
	}
</style>

<div class="absolute -z-10 -mt-[500px] hidden md:block">
	<div
		class="animate-gradient h-[50vw] w-[50vw] animate-[moveGradient_20s_infinite_alternate] rounded-full blur-3xl"
	>
	</div>
</div>
<div class="absolute -z-10 -mt-[500px] hidden md:block">
	<div
		class="animate-gradient h-[40vw] w-[40vw] animate-[moveGradientt_10s_infinite_alternate] rounded-full blur-3xl"
	>
	</div>
</div>
