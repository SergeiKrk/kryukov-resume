<style>
    .awscontainer {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100px;
  width: 300px;
}
button.awsBtn {
  position: relative;
  display: block;
  padding: 15px 30px;
  text-decoration: none;
  font-weight: 700;
  border-radius: 40px;
  letter-spacing: 2px;
  color: #fff;
  z-index: 1;
  background: linear-gradient(90deg, #13b690, #855a9e, #e60ba9, #03a9f0);
  background-size: 400%;
  box-shadow: -2px -2px 8px rgba(255, 255, 255, 1),
    -2px -2px 12px rgba(255, 255, 255, 0.5),
    inset 2px 2px 4px rgba(255, 255, 255, 0.1), 2px 2px 8px rgba(0, 0, 0, 0.15);
}
button.awsBtn:hover span {
  transform: scale(0.98);
}
button.awsBtn:before {
    filter: blur(12px);
  z-index: -1;
  opacity: 1;
  animation: animatewv 7s linear infinite;
  content: "";
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  background: linear-gradient(40deg, #13b690, #855a9e);
  background-size: 200%;
  border-radius: 30px;
  transition: 0.8s;
}
button.awsBtn:hover:before {
  filter: blur(20px);
  z-index: -1;
  opacity: 1;
  animation: animatewv 5s linear infinite;
  content: "";
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  background: linear-gradient(90deg, #13b690, #855a9e, #e60ba9, #03a9f0);
  background-size: 400%;
  border-radius: 30px;
  transition: 0.5s;
}
@keyframes animatewv {
  0% {
    background-position: 0%;
  }
  100% {
    background-position: 400%;
  }
}
</style>
<div class='awscontainer'>
    <button class='ml-4 awsBtn text-[12px] lg:text-[16px] lg:min-w-[200px]'>Узнать <span class="hidden lg:inline">цену</span></button>
</div>