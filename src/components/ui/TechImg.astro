---
import { Image } from "astro:assets";

const { imag, alt } = Astro.props;
---

<span class="w-[80px] lg:w-[150px] inline-block">
  <Image
        src={imag}
        alt={alt}
        class="sm:w-3/4 object-coverin w-[50px] lg:w-[80px] hover:grayscale hover:scale-125 ease-in-out duration-300"
        loading="eager"
      />
</span>
