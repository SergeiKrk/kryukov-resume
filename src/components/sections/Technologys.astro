---
import Section from "./Section.astro";
import { Image } from "astro:assets";

import tailwind from "../../assets/pics/tailwind.webp";
import react from "../../assets/pics/react.webp";
import redux from "../../assets/pics/redux.webp";
import html5 from "../../assets/pics/html5.webp";
import css3 from "../../assets/pics/css3.webp";
import js from "../../assets/pics/js.webp";
import preline from "../../assets/pics/preline.webp";
import saas from "../../assets/pics/saas.webp";
import ts from "../../assets/pics/ts.webp";
import git from "../../assets/pics/git.webp";
import github from "../../assets/pics/gitHub.webp";
import nodeJS from "../../assets/pics/nodeJS.webp";
import wsCode from "../../assets/pics/wsCode.webp";

type technology = [
  img:any,
  alt:string,
]

const technology = [
  {
    img: tailwind,
    alt: "TailwindCSS",
  },
  {
    img: redux,
    alt: "Redux",
  },
  {
    img: react,
    alt: "ReactJS",
  },
  {
    img: html5,
    alt: "HTML5",
  },
  {
    img: css3,
    alt: "CSS3",
  },
  {
    img: js,
    alt: "JS",
  },
  {
    img: preline,
    alt: "Preline",
  },
  {
    img: saas,
    alt: "Saas",
  },
  {
    img: ts,
    alt: "TS",
  },
  {
    img: git,
    alt: "Git",
  },
  {
    img: github,
    alt: "GitHub",
  },
  {
    img: nodeJS,
    alt: "NodeJS",
  },
  {
    img: wsCode,
    alt: "VSCode",
  }
];
---

<Section id="technologys-slider">
  <div class="my-24 lg:my-52">
    <div class="w-2/3 sm:w-1/2 lg:w-1/3 mx-auto text-center mb-6 mt-6 lg:mt-28">
      <h2 class="text-2xl text-gray-800 font-bold sm:text-3xl leading-loose"><span class="greenhead sm:text-4xl">Стек технологий</span><br> для разработки Вашего сайта</h2>
    </div>
    <div class="relative flex overflow-x-hidden mb-8">
      <div class="py-12 animate-marquee whitespace-nowrap">
        {
          technology.map((tec) => {
            return (
              <span  class="inline-block w-[80px] lg:w-[120px]">
                <Image src={tec.img} alt={tec.alt} class="w-[50px] lg:w-[80px] hover:scale-125 transition duration-300 ease-in-out" loading="eager" />
              </span>
            )
          })
        }
      </div>
      <div class="absolute top-0 py-12 animate-marquee2 whitespace-nowrap">
        {
          technology.map((tec) => {
            return (
            <span  class="inline-block w-[80px] lg:w-[120px]">
                <Image src={tec.img} alt={tec.alt} class="w-[50px] lg:w-[80px] hover:scale-125 transition duration-300 ease-in-out" loading="eager" />
              </span>
            )
          })
        }
      </div>
    </div>
  
    <div class="grid grid-cols-12 sm:flex sm:justify-center gap-6 sm:gap-x-12 lg:gap-x-20">
  
      <div class="col-span-6 text-center">
        <h4 class="text-xl md:text-3xl font-semibold text-gray-800 ">
          SEO
        </h4>
        <div class="text-sm text-gray-600">
          Оптимизированные сайты
        </div>
      </div>

      <div class="col-span-6 text-center">
        <div class="text-xl md:text-3xl font-semibold text-gray-800">
          №1
        </div>
        <h4 class="text-sm text-gray-600">
          По скорости интерфейсов
        </h4>
      </div>
  
      <div class="col-start-4 col-span-6 text-center">
        <div class="text-xl md:text-3xl font-semibold text-gray-800">
          30+
        </div>
        <h4 class="text-sm text-gray-600">
          Довольных клиентов
        </h4>
      </div>
  </div>
</Section>

